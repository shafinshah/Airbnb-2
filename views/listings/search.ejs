<% layout("/layouts/boilerplate") %>
<body>
  <div class="search">
 
        
<button class="btn btn-dark">Fillter Based ON</button>
    <form action="/listings/location" method="GET" class="d-flex">
    <input type="text" name="search" placeholder="Location" class="form-control" required>
         <button type="submit" class="btn btn-outline-primary">Search</button>
    </form>
        



  

   <form action="/listings/country" method="GET" class="d-flex">
    <input type="text" name="search" placeholder="Country"  class="form-control"  required >
    <button type="submit" class="btn btn-outline-primary">Search</button>
  </form>

   <form action="/listings/price" method="GET" class="d-flex">
    <input type="text" name="search" placeholder="Max Price Range"   class="form-control"  required>
    <button type="submit" class="btn btn-outline-primary">Search</button>
  </form>
       
</div>
        <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
    <% for(let listings of list){  %>
      <a href="/listings/<%= listings._id %>" class="listings-link">
       
            <div class="listing-card" >
                <img src="<%= listings.image %>" class="card-img-top" alt="listings_image" style="height: 20rem">
                <div class="card-body">
                  <p class="card-text"><b><%= listings.title %></b><br>&#8377 <%= listings.price.toLocaleString("en-IN") %>/night
                  <i class="tax-info">&nbsp; &nbsp;+18% GST</i>
                  </p>


                </div>
              </div>
       
      </a>
      <% } %>
    </div>
</body>