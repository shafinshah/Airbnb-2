
<% layout("/layouts/boilerplate") %>
<style>

@media (max-width:380px){
  #filters{
    display: none !important;
  }
 
}

  #filters{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }


  .filtters{
    margin-top: 2rem;
    margin-right: 2rem;
    text-align: center;
    margin-bottom: 2.25rem;
    opacity: 0.7;

  }
  .filtters:hover{
    opacity: 3;
    cursor: pointer;
  }
  .y{
  
    opacity: 3 !important;
  }
  .tax-info{
    display: none;
  }
  .tax-toggle{
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.5rem;
    width: 18rem;
    padding: 1rem;
    margin-left: 6rem;
    margin-bottom: 2rem;
    margin-top: 2rem;
    display: flex;
    align-items:center ;
  }
 
</style>
<body>
  <div class="index-top">
  <div class="search">
 
        <div>
<button class="btn btn-dark"class="filtter">Fillter Based On
      </button>
      </div>
      <div class="div">
    <form action="/listings/location" method="GET" class="d-flex">
    <input type="text" name="search" placeholder="Location" class="form-control"  required>
         <button type="submit" class="btn btn-outline-primary">Search</button>
    </form>
        



  

   <form action="/listings/country" method="GET" class="d-flex">
    <input type="text" name="search" placeholder="Country"  class="form-control"  required >
    <button type="submit" class="btn btn-outline-primary">Search</button>
  </form>

   <form action="/listings/price" method="GET" class="d-flex">
    <input type="text" name="search" placeholder="Max Price Range"   class="form-control"  required>
    <button type="submit" class="btn btn-outline-primary">Search</button>
  </form>
      </div> 
</div>
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
      class="form-check-input"
      type="checkbox"
      role="switch"
      id="flexSwitchCheckDefault"
      />

      <label class="form-check-lable" for="flexSwitchCheckDefault">Display total after taxes</label>
    </div>
  </div>
</div>
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
    <% for(let listings of allListings){  %>
      <a href="/listings/<%= listings._id %>" class="listings-link">
       
            <div class="listing-card" >
                <img src="<%= listings.image %>" class="card-img-top" alt="listings_image" style="height: 20rem">
                <div class="card-body">
                  <p class="card-text"><b><%= listings.title %></b><br>&#8377 <%= listings.price.toLocaleString("en-IN") %>/night
                  <i class="tax-info">&nbsp; &nbsp;+18% GST</i>
                  </p>


                </div>
              </div>
       
      </a>
      <% } %>
    </div>
    <script> 
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
      taxSwitch.addEventListener("click", () => {
       let taxInfo = document.getElementsByClassName("tax-info");
for(info of taxInfo) {
  if(info.style.display != "inline"){
    info.style.display = "inline";
  }
else{
  info.style.display = "none";
}
}
 
      });
    </script>
</body>
