<% layout("/layouts/boilerplate") %>

<div class="row mt-3 col-6 offset-2 mb-3">
    <h1 class="col-10 offset-3">SingUp on Wanderlust</h1>
    <div class="col-6 offset-3">
      
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <label for="username" class="form-label">Username</label>
            <input name="username" id="username" type="text" class="form-control" required>
            <div class="valid-feedback">Looks good!</div>

            <label for="email" class="form-label">Email</label>
            <input name="email" id="email" type="text" class="form-control" required>
            <div class="valid-feedback">valid Email!</div>

            <label for="password" class="form-label">Passsword</label>
            <input name="password" id="password" type="password" class="form-control" required>
            <div class="valid-feedback">Good password!</div>

            <button class="btn btn-success mt-3">SingUp </button>
        </div>
               

        </form>
    </div>
</div>